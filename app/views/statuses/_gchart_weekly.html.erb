<%= image_tag(Gchart.bar(
   :encoding => 'simple',
   :bg => 'CACACA', 
   :max_value => max,
   :data => chart_data,
     :line_colors => colors, #['224499'],
   :axis_labels => [chart_labels, "0|#{(max / 2)}|#{max}"],
   :size => '480x140',
   :legend => legend,
   :custom => "&amp;&amp;chg=0,25,1,0&amp;chbh=47&amp;chxr=0,#{date_range.first.day},#{date_range.last.day}|1,0,#{normalized_max(chart_data).to_i}",
   :axis_with_labels => %w(x y)), :style => 'margin-top:27px', :id => "#{params[:filter]}-chart", :class => 'special-chart') %>
